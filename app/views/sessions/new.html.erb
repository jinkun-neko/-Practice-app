<% provide(:title, "ログイン") %>
<h1 class="brown">ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        
        <div class = "sukoshi">
            <%= f.label :メール,class: 'label' %>
            <%= f.text_field :email, class: 'form-control', placeholder: "" %>
        </div>

        <div class = "sukoshi">
            <%= f.label :パスワード,class: 'label' %>
            <%= f.password_field :password, class: 'form-control', placeholder: "" %>
        </div>

        <div class = "sukima ">
            <%= f.submit "ログイン",class: "btn btn-success", style: 'background-color: rgba(91, 33, 0, 0.97);border-color: rgba(91, 33, 0, 0.97);'%> 
        </div>

        <% end %>
   <%= link_to "新規登録してない方",class: "sign_up" /signup_path %> 
  </div>
</div>